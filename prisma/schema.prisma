// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  role      String
  createdAt DateTime

  authToken AuthToken[]

  @@map("user")
}

model AuthToken {
  id                      String   @id
  refreshToken            String
  refreshTokenExpiresDate DateTime
  createdAt               DateTime
  user                    User     @relation(fields: [userId], references: [id])
  userId                  String

  @@map("authToken")
}
