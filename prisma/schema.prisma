// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                  String    @id
  name                String
  email               String    @unique
  password            String
  role                String
  createdAt           DateTime
  updatedAt           DateTime
  account_activate_at DateTime?

  userToken UserToken[]
  userCode  UserCode[]

  @@map("user")
}

model UserToken {
  id                      String   @id
  refreshToken            String
  refreshTokenExpiresDate DateTime
  createdAt               DateTime
  user                    User     @relation(fields: [userId], references: [id])
  userId                  String

  @@map("userToken")
}

model UserCode {
  id        String   @id
  code      String
  expiresIn DateTime
  createdAt DateTime
  type      String
  active    Boolean
  userId    String

  user User @relation(fields: [userId], references: [id])
}
